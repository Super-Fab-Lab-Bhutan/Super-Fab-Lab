<%- include('../partials/header.ejs')  %>

<div class="row">
    <div class="col-md-6 mx-auto">
        <h1 class="display-6">Edit <%= news.title %></h1>
        <form action="/admin/news-and-events/<%=news._id%>?_method=PATCH" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" name="name" id="name" placeholder="Product Name" value="<%= news.name %> ">
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image Upload (the image size should be 400px x 400px)</label>
                <input class="form-control" type="file" id="image" name="image"><br>
                <input type="text" class="form-control" name="image" id="image" value="<%=news.image%>" placeholder="No image url">
              </div>
            <div class="mb-3">
                <label for="desc" class="form-label">Description</label>
                <textarea class="form-control" name="description" id="description"rows="5"><%= news.description %> </textarea>
            </div>
            <button type="submit" class="btn btn-success btn-small">Submit</button>
        </form>
    </div>
</div>
