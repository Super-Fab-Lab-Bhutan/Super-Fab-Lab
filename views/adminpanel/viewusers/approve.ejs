<%- include("../partials/header") %>

<a href="/viewusers">Back</a>
<% for(let i of approve){ %>
    <div class="col-lg-4 col-md-6 mb-3">
      <div class="card mx-auto" style="width: 20rem;">
        <div class="card-body">
          <h5 class="card-title"><b>Name: <%=i.username%> </b></h5>
          <h6>Email: <b><%=i.email%></b>
            Phone Number:<b>   <%=i.phoneNumber%></b>
            Organization: <b> <%=i.organization%></b>
    
                <br>
                <br>
                <form action="/viewusers/<%= i._id %>/approve?_method=PATCH" method="POST">
                  <button class="btn btn-info btn-small"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check" viewBox="0 0 16 16">
                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z"/>
                  </svg> Approve</button>
                </form>
                <br>

                  <form class="d-inline-block" action="/viewusers/<%= i._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger btn-small"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                      </svg> Decline</button>
                  </form>
                
         </div>
      </div>
    </div>
    <%}%>

